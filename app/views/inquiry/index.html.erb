<div class="container mt-5">
  <div class="col mx-auto">
    <div class="card form-wrap">
      <div class="card-body">
        <h4 class="card-title mb-4 text-center">
          お問い合わせ
        </h4>
        <%= form_with model: @inquiry, url: inquiry_confirm_path, method: :post, local: true do |f| %>
          <div class="form-group bmd-form-group">
            <%= f.label :名前, class:"bmd-label-floating" %><span class="text-danger">（必須）</span>
            <%= f.text_field :name, autocomplete: "name", class:"form-control border-dark" %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label :メールアドレス, class:"bmd-label-floating" %><span class="text-danger">（必須）</span>
            <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"form-control border-dark" %>
          </div>
          <div class="form-group bmd-form-group">
            <%= f.label :お問い合わせ内容, class:"bmd-label-floating" %>
            <%= f.text_area :message, autofocus: true, autocomplete: "message", class:"form-control border-dark" %>
          </div>
          <div class="form-group">
            <%= f.submit "確認", class:"btn btn-outline-dark btn-block btn-raised mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>