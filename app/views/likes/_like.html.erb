<% if post.liked_by?(current_user) %>
  <%= link_to post_likes_path(post), method: :delete, remote: true do %>
    <i class="fa fa-heart faa-tada animated-hover" aria-hidden="true"  style="color: red;">
      <%= post.likes.count %>
    </i>
  <% end %>
<% else %>
  <%= link_to post_likes_path(post), method: :post, remote: true do %>
    <i class="fa fa-heart faa-pulse animated-hover" aria-hidden="true">
      <%= post.likes.count %>
    </i>
  <% end %>
<% end %>