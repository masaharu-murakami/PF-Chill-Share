<div class="container mt-5">
  <div class="card col-sm-5 mx-auto mt-3">
    <div class="card-body">
        <h2 class="card-title mb-4 text-center">
          新規投稿
        </h2>
          <%= form_with model: @post, local: true do |f| %>
            <div class="form-group">
              <%= f.label :タイトル, class:"form-label" %>
              <%= f.text_area :title, autofocus: true, autocomplete: "title", class:"form-control border-dark" %>
            </div>

            <div class="form-group">
              <%= f.label :投稿画像, class:"form-label" %>
              <%= f.attachment_field :image, autofocus: true, autocomplete: "image"  %>
            </div>

            <div class="form-group">
              <%= f.label :本文, class:"form-label" %>
              <%= f.text_area :introduction, autocomplete: "new-password", class:"form-control border-dark" %>
            </div>

            <div class="form-group">
              <%= f.label :住所, class:"form-label" %>
              <%= f.text_area :address, autocomplete: "new-password", class:"form-control border-dark" %>
            </div>

            <!--レビュー機能-->
            <div class="form-group row" id="star">
              <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
              <%= f.hidden_field :rate, id: :review_star %>
            </div>

            <!--レビューのjavascript-->
            <script>
              $('#star').raty({
              size     : 36,
              starOff:  '<%= asset_path('star-off.png') %>',
              starOn : '<%= asset_path('star-on.png') %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              scoreName: 'post[rate]',
              half: true,
              });
            </script>

            <div class="form-group">
              <%= f.submit "投稿する", class:"btn btn-success btn-block" %>
            </div>
            <% end %>
    </div>
  </div>
</div>