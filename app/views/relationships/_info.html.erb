<% if current_user.following?(user) %>
  <%= link_to "フォロー中", user_relationships_path(user.id), class: 'btn btn-outline-info btn-block btn-radius grow', method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), class: 'btn btn-outline-success btn-block btn-radius', method: :post %>
<% end %>