<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h2>フォロワー一覧</h2>
      <% if @users.exists? %>
        <table class="table table-borderless mt-3">
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="" style="vertical-align:middle;">
                  <%= link_to user_path(user.id) do %>
                    <%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "60x60", class:"rounded-circle" %>
                  <% end %>
                </td>
                <td class="" style="vertical-align:middle;"><%= user.nickname %></td>
                <td class="" style="vertical-align:middle;">フォロー数<%= user.followings.count %>人</td>
                <td class="" style="vertical-align:middle;">フォロワー数<%= user.followers.count %>人</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>