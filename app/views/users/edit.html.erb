<div class="container mt-5">
  <div class="card col-sm-4 mx-auto mt-3">
    <div class="card-body">
        <h2 class="card-title mb-4 text-center">
          アカウント編集
        </h2>
          <%= form_with model: @user, url: user_path(current_user.id), method: :patch, local: true do |f| %>
            <div class="form-grop">
              <%= f.label :アカウント画像, class:"form-label" %>
              <%= f.attachment_field :profile_image, autocomplete: "profile_image" %>
            </div>

            <div class="form-group">
              <%= f.label :ニックネーム, class:"form-label" %>
              <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class:"form-control border-dark" %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "アカウント編集", class:"btn btn-success"  %>
            </div>
            <% end %>
    </div>
  </div>
</div>